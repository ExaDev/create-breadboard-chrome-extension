{
	"compilerOptions": {
	  "moduleResolution": "Node",
	  "module": "esnext",
	  "target": "es2020",
	  "outDir": "./dist", // Specify the output folder for compiled JavaScript
	  "allowJs": true,
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"esm": true,
		"compiler": "typescript"
	  },
	"include": ["src/**/*.ts"] // Specify the path to your TypeScript files
}